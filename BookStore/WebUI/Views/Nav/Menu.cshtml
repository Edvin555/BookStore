@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Books", null, new { @class = "btn btn-block btn-default btn-lg"})

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = "Books",
    action = "List",
    genre = link,
    page = 1
},
    new { @class = ""
              + (link == ViewBag.SelectedGenre ? "btn btn-block  btn-lg btn-primary" : "btn btn-block btn-default btn-lg")
    }
     

)}
